generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  function String

  patients Patient[]

  @@map("Usuario")
}

model Patient {
  id        String   @id @default(uuid()) 
  name      String  
  birthdate DateTime 
  createdBy String   

  medicalRecord MedicalRecord? @relation("PatientMedicalRecord")
  user          User           @relation(fields: [createdBy], references: [id])

  notes         Note[]
  appointments  Agenda[]
  @@map("Paciente")
}


model MedicalRecord {
  id           String   @id @default(uuid())
  patientId    String   @unique 
  registerDate DateTime 
  details      String   

  patient Patient @relation(fields: [patientId], references: [id], name: "PatientMedicalRecord")

  @@map("Prontuario")
}

model Note {
  id        String   @id @default(uuid())
  patientId String
  noteDate  DateTime
  content   String

  patient Patient @relation(fields: [patientId], references: [id])

  @@map("Anotacao")
}

model Hint {
  id        String    @id @default(uuid())
  title     String
  content   String  

  @@map("Dica")
}

model Agenda {
  id          String    @id @default(uuid())
  patientId   String  
  date        DateTime
  description String
  agendaType  String

  patient Patient @relation(fields: [patientId], references: [id])

}
