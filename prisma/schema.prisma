generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  function String

  patients Patient[]

  @@map("Usuario")
}

model Patient {
  id            String   @id @default(uuid()) 
  name          String  
  age           Int 
  observations  String
  height        Float
  bloodType     String
  alergies      String


  createdBy String   

  user          User           @relation(fields: [createdBy], references: [id])

  images        Image[]
  notes         Note[]
  appointments  Agenda[]
  @@map("Paciente")
}

model Image {
  id        String  @id @default(uuid())
  patientId String
  url       String     


  patient Patient @relation(fields: patientId, references: id)

}
model Note {
  id        String   @id @default(uuid())
  patientId String
  noteDate  DateTime
  content   String

  patient Patient @relation(fields: [patientId], references: [id])

  @@map("Anotacao")
}

model Hint {
  id        String    @id @default(uuid())
  title     String
  content   String  

  @@map("Dica")
}

model Agenda {
  id          String    @id @default(uuid())
  patientId   String  
  date        DateTime
  description String
  agendaType  String

  patient Patient @relation(fields: [patientId], references: [id])

}
