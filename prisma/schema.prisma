generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  function String

  patients Patient[]
  notes        Note[]

  @@map("Usuario")
}

model Patient {
  id           String @id @default(uuid())
  name         String
  age          Int
  icon         String
  observations String
  height       Float
  bloodType    String
  allergies    String

  createdBy String

  user User @relation(fields: [createdBy], references: [id])

  
  appointments Agenda[]

  @@map("Paciente")
}

model Note {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  priority    String
  patientName String
  createdBy   String

  user User @relation(fields: [createdBy], references: [id])

  @@map("Anotacao")
}

model Hint {
  id      String @id @default(uuid())
  title   String
  content String

  @@map("Dica")
}

model Agenda {
  id          String   @id @default(uuid())
  patientId   String
  date        DateTime
  description String
  agendaType  String

  patient Patient @relation(fields: [patientId], references: [id])
}
